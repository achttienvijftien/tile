{
  "name": "achttienvijftien/tile",
  "description": "Use twig in your WordPress themes",
  "type": "library",
  "require-dev": {
    "achttienvijftien/building-techniques": "dev-main",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "phpunit/phpunit": "^10.1"
  },
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "AchttienVijftien\\Tile\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AchttienVijftien\\Tile\\Test\\": "test/php/"
    }
  },
  "scripts": {
    "format": "phpcbf --report-summary --report-source",
    "lint": "phpcs",
    "test": "phpunit"
  },
  "authors": [
    {
      "name": "1815",
      "email": "it@1815.nl"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^8.0",
    "twig/twig": "3.x-dev"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
